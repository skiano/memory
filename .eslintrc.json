{
  "extends": [
    "airbnb"
  ],

  "env": {
    "jest": true
  },

  "globals": {
    "KYT": true
  },

  "plugins": [
    "json"
  ],

  "rules": {
    "no-console": "off",
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "max-nested-callbacks": [2, {
      "max": 5
    }],
    "constructor-super": 2,
    "no-this-before-super": 2,
    "prefer-spread": 2,
    "prefer-reflect": 2,
    "no-warning-comments": [1, {
      "terms": ["todo", "fixme"],
      "location": "start"
    }],
    "import/extensions": [1, {
      "js": "never"
    }],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "no-param-reassign": 0,
    "semi": ["warn", "never"]
  },

  "ignore": [
    "coverage"
  ]
}
